<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OkulProje</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OkulProje.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">OIS</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavSupportedDropdown" aria-controls="navbarNavSupportedDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>


                <div class="collapse navbar-collapse" id="navbarNavSupportedDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarSupportedDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Öğrenci
                            </a>
                            <ul class="dropdown-menu dropdown-menu-light" aria-labelledby="navbarSupportedDropdownMenuLink">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Ogrenci" asp-action="Kaydet">Ekle</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Ogrenci" asp-action="Index">Listele</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarSupportedDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Ders
                            </a>
                            <ul class="dropdown-menu dropdown-menu-light" aria-labelledby="navbarSupportedDropdownMenuLink">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Ders" asp-action="Kaydet">Ekle</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Ders" asp-action="Index">Listele</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarSupportedDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Personel
                            </a>
                            <ul class="dropdown-menu dropdown-menu-light" aria-labelledby="navbarSupportedDropdownMenuLink">
                                <li><a class="dropdown-item" asp-area="" asp-controller="OkulYonetim" asp-action="Kaydet">Ekle</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="OkulYonetim" asp-action="Index">Listele</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Öğrenci-Ders
                            </a>
                            <ul class="dropdown-menu dropdown-menu-light" aria-labelledby="navbarSupportedDropdownMenuLink">
                                <li><a class="dropdown-item" asp-area="" asp-controller="OgrenciDers" asp-action="Kaydet">Ekle</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="OgrenciDers" asp-action="Index">Listele</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Ayşegül Kutlay - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
